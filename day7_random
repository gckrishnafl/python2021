#Random person pick to pay the bill
names_string = input("Give me everybody's name, seperated by a comma. ")
names = names_string.split(", ")
import random
a = (len(names))
random_choice = random.randint(0, a - 1)
person_who_will_pay = names[random_choice]
print(f"{person_who_will_pay} is going to pay the bill.")
